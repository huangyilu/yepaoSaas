<!--pages/privateMember/courseCustom.wxml-->

<view class='bg-view'>
  
  <!-- 周历 -->
  <view class='weui-flex calendar-bgview'>
    <view class='weui-flex__item' wx:for='{{ weekData }}' wx:key='{{ index }}'>
      <!-- 周 -->
      <view>{{ item.week }}</view>
      <!-- 日期 -->
      <view class="{{ item.selected ? 'today__item' : 'day__item' }}" id='{{ index }}' bindtap='bindCalendarTodayTap'>{{ item.day }}</view>
    </view>
  </view>

  <!-- 级别 -->
  <view class='weui-flex level-view'>
    <view class='weui-flex__item' wx:for='{{ levelItem }}' wx:key='{{ index }}'>
      <view class='course-btn-item' id='{{ index }}' bindtap='bindCourseBtnTap'>
        <view class='course-btn-icon' style='{{ item.selected ? "border-style: none;" : "border: 1px #ffffff solid;" }}'>
          <image hidden='{{ !item.selected }}' src='../../images/checked.png'></image>
        </view>
        <text>{{ item.level }}</text>
      </view>
    </view>
  </view>

  <!-- 全身定制 -->
  <view class='personal-view' >
    <!-- bg img -->
    <image class='personal-bgimg' src='../../images/person_bg.png'></image>
    <!-- btn -->
    <!-- 全身 -->
    <view class='course-btn-item top-btn' bindtap=''>
      <view class='course-btn-icon' style='{{ all.selected ? "border-style: none;" : "border: 1px #ffffff solid;" }}'>
        <image hidden='{{ !all.selected }}' src='../../images/checked.png'></image>
      </view>
      <text>{{ all.body }}</text>
    </view>
    <!-- 两肩 -->
    <view class='course-btn-item top-left-btn' bindtap=''>
      <view class='course-btn-icon' style='{{ all.selected ? "border-style: none;" : "border: 1px #ffffff solid;" }}'>
        <image hidden='{{ !all.selected }}' src='../../images/checked.png'></image>
      </view>
      <text>{{ all.body }}</text>
    </view>
    <view class='course-btn-item top-right-btn' bindtap=''>
      <view class='course-btn-icon' style='{{ all.selected ? "border-style: none;" : "border: 1px #ffffff solid;" }}'>
        <image hidden='{{ !all.selected }}' src='../../images/checked.png'></image>
      </view>
      <text>{{ all.body }}</text>
    </view>
    <!-- 核心 -->
    <view class='course-btn-item center-btn' bindtap=''>
      <view class='course-btn-icon' style='{{ all.selected ? "border-style: none;" : "border: 1px #ffffff solid;" }}'>
        <image hidden='{{ !all.selected }}' src='../../images/checked.png'></image>
      </view>
      <text>{{ all.body }}</text>
    </view>
    <!-- 下半身 -->
    <view class='course-btn-item bottom-left-btn' bindtap=''>
      <view class='course-btn-icon' style='{{ all.selected ? "border-style: none;" : "border: 1px #ffffff solid;" }}'>
        <image hidden='{{ !all.selected }}' src='../../images/checked.png'></image>
      </view>
      <text>{{ all.body }}</text>
    </view>

    <!-- foot-view -->
    <view class='foot-btn-view'>生成</view>

  </view>


</view>