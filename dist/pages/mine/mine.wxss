/* pages/mine/mine.wxss */


.head-view {
    width: 100%;
    padding: 50rpx 0 15rpx;
    text-align: center;
    margin-bottom: 20rpx;
    background-color: #2f2d45;
}
.head-img-view {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%; 
    border: 1rpx #2f2d45 solid;
    display: inline-block;
}
.head-img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.certification-btn {
    width: 140rpx;
    height: 40rpx;
    line-height: 40rpx;
    border: 1rpx #BAB9C7 solid;
    border-radius: 20rpx;
    color: #FFEF5A;
    font-size: 26rpx;
    margin: 0 auto 10rpx;
}

.x-item-view {
    text-align: center;
    margin-bottom: 20rpx;
    background-color: #2f2d45;
}
.mine-x-item {
    padding: 20rpx 0 10rpx; 
}
.x-item-icon {
    width: 50rpx;
    height: 50rpx;
}

