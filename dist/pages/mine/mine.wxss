/* pages/mine/mine.wxss */

@import '../../templates/imgText-item/imgText-item.wxss';

.head-view {
    width: 100%;
    height: 200rpx;
    padding: 50rpx 0 0;
    text-align: center;
    margin-bottom: 20rpx;
    background-color: #2f2d45;
}
.head-img-view {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%; 
    border: 1rpx #2f2d45 solid;
    display: inline-block;
}
.head-img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.x-item-view {
    text-align: center;
    margin-bottom: 20rpx;
    background-color: #2f2d45;
}
.mine-x-item {
    padding: 20rpx 0 10rpx; 
}
.x-item-icon {
    width: 50rpx;
    height: 50rpx;
}

