<!--pages/club/club.wxml-->

<view class='bg-view'>

  <!-- 轮播图 -->
  <swiper class='swiper' indicator-dots="true"
          indicator-color="#ffffff"
          indicator-active-color="#fcf428"
          autoplay="true" >
  <block wx:for="{{ swiperImgUrls }}">
    <swiper-item>
      <image mode='aspectFill' class='swiper-img' src="{{ item }}"/>
    </swiper-item>
  </block>
  </swiper>

  <!-- item -->
  <view class='club-item-view'>
    <view class='weui-flex'>
      <view class='weui-flex__item club-item'>
        <image class='club-item-icon' src='../../images/icon/club/club_dynamic.png'></image>
        <view>会员活动</view>
      </view>
      <view class='weui-flex__item club-item'>
        <image class='club-item-icon' src='../../images/icon/club/member_Activities.png'></image>
        <view>俱乐部动态</view>
      </view>
    </view>
  </view>

  <!-- 推荐活动 -->
  <view class='empty-view'>暂无推荐活动</view>

</view>