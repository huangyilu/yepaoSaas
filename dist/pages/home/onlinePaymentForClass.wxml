<view class='bg-view'>

  <view class='recocell-view weui-flex'>

    <view class='head-img-view'>
      <image mode='aspectFill' src='{{ classInfo.headimg }}'></image>
    </view>

    <view class='weui-flex__item'>
      <view class='name-text'>{{ classInfo.courseName }}</view>
      <view class='info-text'> 
        ¥{{ classInfo.price }}
        <text>共{{ classInfo.courseTime }}课时</text>
      </view>
    </view>
    
  </view>


  <view class='order-cell-view'>
    <view>
      教练选择
      <text>朱永磊</text>
    </view>
    <view>课程类型 <text>私教课</text> </view>
    <view>订单号 <text>909309e02343</text> </view>
    <view>订单金额 <text>¥{{ classInfo.price }}</text> </view>
  </view>

  <view class='check-text weui-flex__item'>阅读并同意<text class='yeColor'>《会员卡购买协议》</text></view>

</view>