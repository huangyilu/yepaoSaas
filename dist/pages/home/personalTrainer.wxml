<!--pages/home/personalTrainer.wxml-->

<import src="../../templates/star-item/star-item.wxml"/>

<view class='bg-view'>

  <view class='personal-cell-view'>
    <block wx:for='{{ personalList }}' wx:for-item='persl' wx:key='{{ index }}'>
    <view class='personal-cell'>

      <view class='weui-flex'>
        <!-- 头像 -->
        <view >
          <image class='personal-headimg'
                mode='aspectFill'
                src='{{ persl.headImg != "" ? persl.headImg : "../../images/icon/default_headimg.png" }}'></image>
        </view>
        <!-- 名字 信息 等文字 -->
        <view class='weui-flex__item'>
          <!-- 名字 -->
          <view class='name-view'>
            <text>{{ persl.name }}</text>
            <template is='star-item' data='{{ ...persl, starUrl, emptUrl }}'/>
          </view>
          <!-- 标签 -->
          <view class='tag-view'>
            <view wx:if='{{ persl.tags != "" }}' class='tag-item'>{{ persl.tags }}</view>
            <view wx:if='{{ persl.tags == "" }}'>暂无标签</view>
          </view>
        </view>
        <!-- 预约 按钮 -->
        <view >
          <view class='appt-btn'>预约</view> 
        </view>
      </view>

      <!-- 照片 -->
      <view class='personal-cell-imgs-view'>
        <view class="weui-grids">
          <block wx:for-items="{{ persl.imgs }}" wx:key="{{ index }}">
            <view class="weui-grid" hover-class="weui-grid_active"> 
              <image class="weui-grid__icon" 
                    src="{{ item }}"
                    mode='aspectFill' 
                    style='width:{{ windowWidth*0.29 }}px;height:{{ windowWidth*0.29 }}px;' />
            </view> 
          </block>
        </view>
      </view>

    </view>
    </block>
  </view>

</view>