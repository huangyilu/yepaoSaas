.weui-navbar {
    position: fixed;
    font-size: 30rpx;
    color: #848296;
    border-style: none;
}
.weui-navbar__item {
    padding: 15rpx 0; 
    margin-right: 2rpx;
    background-color: #2f2d45;
    border-style: none;
}
.weui-navbar__item.weui-bar__item_on {
    color: #848296;
}
.weui-navbar__slider {
    background-color: #fcf428;
    height: 1px;
}
.weui-navbar__title {
    padding: 0 15rpx;
    display: block;
}
.weui-navbar__title.weui-bar__item_on {
    border-bottom-style: none; 
}
.navbar-cal-icon {
    width: 46rpx;
    height: 45rpx;
    display: block;
    margin: auto;
}


.calendar-view {
    position: fixed; 
    bottom: 0;
    background-color: white;
    z-index: 1000;
}