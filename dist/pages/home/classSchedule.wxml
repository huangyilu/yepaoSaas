<!--pages/home/classSchedule.wxml-->

<import src="../../templates/empty-view/empty-view.wxml"/>

<view class='bg-view'>

<view class="weui-tab">
  <!-- tab  -->
  <view class="weui-navbar">
    <block wx:for-items="{{ navbarTabs }}" wx:key="{{ index }}">
      <view id="{{ index }}" class="weui-navbar__item {{ activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="bindNavbarTabTap">
        <view class="weui-navbar__title">
          {{ item.date }}
          <image wx:if='{{ item.date == "" }}' class='navbar-cal-icon' src='../../images/icon/home/calendar.png'></image>
        </view>
        <view class="weui-navbar__title {{ activeIndex == index ? 'weui-bar__item_on' : ''}}">{{ item.name }}</view>
      </view>
    </block>
    <view class="weui-navbar__slider" style="left: {{ sliderLeft }}px; transform: translateX({{ sliderOffset }}px); -webkit-transform: translateX({{ sliderOffset }}px);"></view>
  </view>

  <!-- panel -->
  <view class="weui-tab__panel">

<!-- 选项一 开始 -->
    <view class="weui-tab__content" hidden="{{ activeIndex != 0 }}">
      <!-- 选项一 内容 -->
      1
      <!-- <template is="dishes-item" data="{{ disheList }}"/> -->
      <!--无 更多 -->
      <template is='empty-view' data='{{ emptyText, emptyIcon }}'/>
    </view>
<!-- 选项一 结束 -->

<!-- 选项二 开始 -->
    <view class="weui-tab__content" hidden="{{ activeIndex != 1 }}">
      <!-- 选项二 内容 -->
      2
      <!-- <template is="talent-item" data="{{ leftTabs,talentList,windowHeight,itemSelectIndex }}"/> -->
      <!-- 无 更多 -->
      <template is='empty-view' data='{{ emptyText, emptyIcon }}'/>
    </view>
<!-- 选项二结束 -->

<!-- 选项三 开始 -->
    <view class="weui-tab__content" hidden="{{ activeIndex != 2 }}">
      <!-- 选项三 内容 -->
      3
      <!-- <template is="celebration-item" data="{{ celebrationList }}"/> -->
      <!-- 无 更多 -->
      <template is='empty-view' data='{{ emptyText, emptyIcon }}'/>
    </view>
<!-- 选项三 结束 -->

<!-- 选项四 开始 -->
    <view class="weui-tab__content" hidden="{{ activeIndex != 3 }}">
      <!-- 选项四 内容 -->
      4
      <!-- <template is="celebration-item" data="{{ celebrationList }}"/> -->
      <!-- 无 更多 -->
      <template is='empty-view' data='{{ emptyText, emptyIcon }}'/>
    </view>
<!-- 选项四 结束 -->

  </view>
</view>

<!-- 课程表 日历 -->

<view class='calendar-view'>

<view class="flex box box-tb box-align-center">
  <view class="calendar box box-tb">

    <!-- 头部 -->
    <view class="top-handle fs30 box box-lr box-align-center box-pack-center">
      
      <!-- 月份 -->
      <view class='txt-center flex' data-taptype='pre' bindtap='bindCalendarMonthTap'>
        《
      </view>
      <view class='txt-center flex' data-taptype='month' bindtap='bindCalendarMonthTap'>
        {{ cur_month || "--" }} 月
      </view>
      <view class='txt-center flex' data-taptype='next' bindtap='bindCalendarMonthTap'>
        》
      </view>
      <!-- 年份 -->
      <view class='txt-center flex' data-taptype='pre' bindtap='bindCalendarYearTap'>
        《
      </view>
      <view class='txt-center flex' data-taptype='year' bindtap='bindCalendarYearTap'>
        {{ cur_year || "--" }}
      </view>
      <view class='txt-center flex' data-taptype='next' bindtap='bindCalendarYearTap'>
        》
      </view>

    </view>

    <!-- 星期 -->
    <view class="weeks box box-lr box-pack-center box-align-center">
      <view class="flex week" wx:for="{{ weeks_ch }}" wx:key="{{ index }}" data-idx="{{ index }}">{{ item }}</view>
    </view>

    <!-- 日期 -->
    <view class="days box box-lr box-wrap">
      <!-- 上个月 -->
      <view wx:if="{{ hasLastMonthGrid }}" class="grid box box-align-center box-pack-center" wx:for="{{ lastMonthDaysGrids }}" wx:key="{{ index }}" data-idx="{{ index }}">
        <view class="otherday box box-align-center box-pack-center">
          {{ item }}
        </view>
      </view>
      <!-- 这个月 -->
      <view class="grid box box-align-center box-pack-center" wx:for="{{ calculatedays }}" wx:key="{{ index }}" data-idx="{{ index }}" bindtap="tapDayItem">
        <view class="day {{ item.choosed ? 'yel-bg' : ''}} box box-align-center box-pack-center">
          <text class='{{ item.unChecked ? "otherday" : "" }}' >{{ item.day }}</text>
        </view>
      </view>
      <!-- 下个月 -->
      <view wx:if="{{ hasNextMonthGrid }}" class="grid box box-align-center box-pack-center" wx:for="{{ nextMonthDaysGrids }}" wx:key="{{ index }}" data-idx="{{ index }}">
        <view class="otherday box box-align-center box-pack-center">
          {{ item }}
        </view>
      </view>
    </view>

    </view>
</view>
  

</view>
<!-- 课程表 日历 -->

</view>