/* pages/home/buyMembershipCard.wxss */

.car-cell-view {
    position: relative;
    padding-top: 30rpx; 
}
.car-cell {
    position: relative;
    padding: 0 30rpx;
    margin-bottom: 30rpx;
    height: 320rpx;
}
.bg-img {
    width: 690rpx;
    height: 320rpx;
    position: absolute;
}
.icon-img {
    width: 81rpx;
    height: 37rpx;
}
.info-view {
    position: absolute;
    padding: 40rpx 30rpx;
}
.car-type-view {
    margin-top: 60rpx;
    padding: 0 30rpx 15rpx 0;
    margin-bottom: 20rpx;
    border-bottom: 2px #fff561 solid;
}
.car-cell .check-icon {
    width: 37rpx;
    height: 37rpx;
    position: absolute;
    bottom: 50rpx;
    right: 60rpx;
}

.foot-view {
    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: #2f2d45;
}
.check-view {
    padding: 20rpx 30rpx;
    font-size: 28rpx;
}
.foot-view .check-icon-view {
    width: 30rpx;
    height: 30rpx;
    margin-top: 6rpx;
    margin-right: 20rpx;
    border: 1px white solid;
    border-radius: 50%;
}
.foot-view .check-icon {
    width: 30rpx;
    height: 30rpx;
    float: left;
}
.buy-view {
    text-align: center;
    font-size: 32rpx;
}
.buy-btn{
    background-color: #fff561;
    color: black;
    height: 100rpx;
    line-height: 100rpx;
}
.price-btn {
    height: 100rpx;
    line-height: 100rpx;
    border-top: 2px #262439 solid;
}