<!--pages/home/membershipCardDetails.wxml-->

<view class='bg-view'>
  
  <view class='title-view'>
    <view class='car-cell' bindtap='bindCarCellTap'>
      <image class='bg-img' src='{{ bgimg }}'></image>
      <view class='info-view'>
        <view><image class='icon-img' src='../../images/icon/home/car/yepao_logo.png'></image></view>
        
        <view class='car-type-view'>{{ carName }}</view>
        <view>¥{{ carPrice }}</view>
      </view>
      <image wx:if='{{ item.checked }}' class='check-icon' src='../../images/icon/home/car/card_choose.png'></image>
    </view>
  </view>

  <view class='orderinfo-view deepGryColor'>
    <view>卡类型：{{ carType }}</view>
    <view>剩余天数：{{ timeLeft }}</view>
    <view>有效时间：{{ effectiveTime }}</view>
    <view>开卡时间：{{ openingTime }}</view>
  </view>

  <view class='renewFee-view' bindtap='bindRenewFeeTap'>
    <text>续费</text>
    <image class='right-icon' src='../../images/icon/arrow_right.png'></image>
  </view>

</view>