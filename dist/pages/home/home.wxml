<!--pages/home/home.wxml-->

<import src="../../templates/certification-box/certification-box.wxml"/>

<view class='bg-view'>

  <!-- 位置 -->
  <!-- <view class='title-view'>古德菲力·深圳</view> -->

  <!-- logo -->
  <view class='logo-view'>
    <image class='logo-img' src='../../images/card_logo.png'></image>
  </view>

  <!-- tab -->
  <view class='tab-view'>
  
    <view class='weui-flex'>
      <view class='weui-flex__item tab-item border-right' id='buyMembershipCard' bindtap='bindNavigatorTap'>
        <image class='tab-icon-buyvip' src='../../images/icon/home/buyvip.png'></image>
        <view>在线购卡</view>
      </view> 
      <view id='membershipCard' bindtap='bindNavigatorTap' class='weui-flex__item tab-item'>
        <image class='tab-icon-mycar' src='../../images/icon/home/mycar.png'></image>
        <view>我的会员卡</view>
      </view>
    </view>

    <view class='weui-flex'>
      <view id='personalTrainer' bindtap='bindNavigatorTap' class='weui-flex__item tab-item border-right'>
        <image class='tab-icon-private_trainer' src='../../images/icon/home/private_trainer.png'></image>
        <view>私人教练</view>
      </view>
      <view id='recommendedCourses' bindtap='bindNavigatorTap' class='weui-flex__item tab-item'>
        <image class='tab-icon-recomclass' src='../../images/icon/home/recomclass.png'></image>
        <view>推荐课程</view>
      </view>
    </view>

    <view class='weui-flex'>
      <view id='classSchedule' bindtap='bindNavigatorTap' class='weui-flex__item tab-item border-right'>
        <image class='tab-icon-gclass' src='../../images/icon/home/gclass.png'></image>
        <view>课程表</view>
      </view>
      <view id='myClass' bindtap='bindNavigatorTap' class='weui-flex__item tab-item'>
        <image class='tab-icon-appt' src='../../images/icon/home/my_appt.png'></image>
        <view>我的约课</view>
      </view>
    </view>

  </view>

</view>

<view hidden='{{ isCertificationMemHidden }}'>
  <template is='certification-box' data=''/>
</view>
