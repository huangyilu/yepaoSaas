/* 主要颜色 */
/* 橘色 #FF904C */
/* 最底层深色 背景色 #0f1029 */
/* 页面 背景色 #22233a */
/* 灰色文字 #848296 */



page {
    width: 100%;
    background-color: #262439;
    font-size: 30rpx;
    color: white;
}

.bg-view {
    color: #ffffff;
    font-size: 30rpx;
}

.foot-btn-view {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #fcf428;
    font-size: 32rpx;
    color: #000000;
    position: fixed;
    bottom: 0;
    z-index: 12;
}

.foot-view {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #2f2d45;
    color: white;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.foot-view .left-btn {
    background-color: #2F2D45;
    -webkit-box-flex:1;
    -webkit-flex:1;
    flex:1;
}
.foot-view .right-btn {
    background-color: #FCF428;
    color: black;
    -webkit-box-flex:1;
    -webkit-flex:1;
    flex:1;
}

/* 弹窗背景 */
.popUps-bgview {
    background-color: #262439; 
    height: 100%; 
    width: 100%;
    position: fixed;
}
.popUps-cancel-btn {
    width: 30rpx;
    height: 30rpx;
    margin-left: 30rpx;
    margin-top: 30rpx;
}

/* 选择框背景 */
.picker-bgview {
    width: 100%;
    height: 100%;
    background-color: rgba(1, 1, 1, 0.6);
    position: fixed;
    bottom: 0;
    z-index: 10;
    color: white;
}


