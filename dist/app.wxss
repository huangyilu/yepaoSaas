/**app.wxss**/

@import 'styles/weui.wxss';

page {
    width: 100%;
    background-color: #262439;
    font-size: 30rpx;
}

.bg-view {
    /* width: 100%;
    height: 100%; */
    /* background-color: #262439; */
    color: #ffffff;
    font-size: 30rpx;
}
.foot-btn-view {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #fcf428;
    font-size: 32rpx;
    color: #000000;
    position: fixed;
    bottom: 0;
    z-index: 12;
}

/* 弹窗背景 */
.popUps-bgview {
    background-color: #262439; 
    height: 100%; 
    width: 100%;
    color: white;
    position: fixed;
}
.popUps-cancel-btn {
    width: 30rpx;
    height: 30rpx;
    margin-left: 30rpx;
    margin-top: 30rpx;
}

/* 字体 大小 */
.fs32 {
    font-size: 32rpx;
}
.fs30 {
    font-size: 30rpx;
}
.fs28 {
    font-size: 28rpx;
}

/* 二级文字 */
.second-txt-fscolor {
    font-size: 28rpx;
    color: #848296;
}

/* icon  */
.right-icon {
    width: 20rpx;
    height: 35rpx;
    float: right;
    margin-top: 48rpx;
    margin-right: 30rpx;
}
.no-data-view image {
    width: 204rpx;
    height: 128rpx;
    margin: 140rpx auto 80rpx;
    display: block;
}
.no-data-view text {
    font-size: 34rpx;
    color: #afafaf;
    display: block;
    margin: auto;
    text-align: center;
}