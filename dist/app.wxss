/* 主要颜色 */
/* 黄色 #fcf428 */
/* 最底层深色 背景色 #262439 */
/* 页面 背景色 #2f2d45 */
/* 灰色文字 #848296 */

page {
    width: 100%;
    background-color: #262439;
    font-size: 30rpx;
    color: white;
}

.bg-view {
    color: #ffffff;
    font-size: 30rpx;
}

.foot-btn-view {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #fcf428;
    font-size: 32rpx;
    color: #000000;
    position: fixed;
    bottom: 0;
    z-index: 12;
}

/* 弹窗背景 */
.popUps-bgview {
    background-color: #262439; 
    height: 100%; 
    width: 100%;
    color: white;
    position: fixed;
}
.popUps-cancel-btn {
    width: 30rpx;
    height: 30rpx;
    margin-left: 30rpx;
    margin-top: 30rpx;
}

/* 字体 大小 */
.fs32 {
    font-size: 32rpx;
}
.fs30 {
    font-size: 30rpx;
}
.fs28 {
    font-size: 28rpx;
}

/* 二级文字 */
.second-txt-fscolor {
    font-size: 28rpx;
    color: #848296;
}

/* 线条 */
.border-right {
    border-right: 1rpx #848296 solid;
}
.border-left {
    border-left: 1rpx #848296 solid;
}
.border-bottom {
    border-bottom: 1rpx #848296 solid;
}
.border-top {
    border-top: 1rpx #848296 solid;
}

/* 暂无 XXX */
.empty-view {
    background-color: #2f2d45;
    padding: 10rpx 30rpx;
    margin-top: 20rpx;
}