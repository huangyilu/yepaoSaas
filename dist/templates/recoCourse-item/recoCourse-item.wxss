

.recocell-view {
    height: 150rpx;
    width: 100%;
    background-color: #2f2d45;
    margin-bottom: 5rpx;
}
.head-img-view {
    width: 120rpx;
    height: 120rpx;
    margin: 15rpx 30rpx;
}
.head-img-view image {
    width: 100%;
    height: 100%;
}
.recocell-view .name-text {
    margin-top: 15rpx;
}
.recocell-view .info-text {
    margin-top: 33rpx;
    font-size: 28rpx;
    color: #fcf428;
}
.recocell-view .info-text text {
    margin-left: 20rpx;
    color: #bab9c7;
}
.btn-view {
    text-align: center;
    margin: 50rpx 30rpx;
}
.btn-view view {
    border: 1px #fcf428 solid;
    color: #fcf428;
    border-radius: 6rpx;
    height: 50rpx;
    line-height: 50rpx;
    width: 100rpx;
}