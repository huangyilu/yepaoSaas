

<template name="private-item">
<!-- 私教会员列表 -->
<block wx:for='{{ privateMemberList }}' wx:key='{{ index }}'> 
<view class='weui-flex private-cell'bindtap='bindPrivateMemberTap' >
  <view class='weui-flex__item left-p'>
    <image mode='aspectFill' src='{{ item.headimg }}'></image>
    <text>{{ item.name }}</text>
  </view>
  <view class='weui-flex__item right-p'>
    <image class='right-icon' mode='aspectFill' src='../../images/arrow_right.png'></image>
    <text>剩余课时 {{ item.period.surplus }}/{{ item.period.total }}</text>
  </view>
</view>
</block> 
</template>