

.leftboxbg-view {
    background-color: rgba(1, 1, 1, 0.3);
    height: 100%;
    width: 100%;
    position: fixed;
    top: 0;
    z-index: 999;
}

.leftbox-view {
    width: 600rpx;
    height: 100%;
    right: 0;
    position: fixed;
    background-color: #262439;
    padding: 0 20rpx;
    color: #BAB9C7;
}
.cots-btn {
    width: 160rpx;
    height: 50rpx;
    line-height: 50rpx;
    background-color: #848297;
    font-size: 28rpx;
    color: white;
    text-align: center;
    border-radius: 6rpx;
    margin: 20rpx 0;
}
.box-item .title {
    margin-top: 20rpx;
}
.leftbox-input-view {
    margin-top: 20rpx;
}
.leftbox-input {
    float:right;
    width:78%;
    border:1rpx #393752 solid;
    border-radius:6rpx;
    padding:5rpx 10rpx;
    line-height:60rpx;
    font-size:26rpx;
    color: #BAB9C7;
}
.leftbox-input-view text {
    float:left;
    margin-top:9rpx;
}
.reset-btn {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    background-color: #2F2D45;
    color: white;
}
.conf-btn {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    background-color: #FCF428;
    color: black;
}