
.int-cell {
    background-color: #2F2D45;
    padding: 20rpx;
    margin-bottom: 2rpx;
}

.int-cell .headimg {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.int-cell .handle-btn{
    width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    color: #FCF428;
    border: 1rpx #FCF428 solid;
    border-radius: 6rpx;
    margin-top: 20rpx;
}
.int-cell .content {
    margin: 0 20rpx;
}
.int-cell .content .text {
    color: #bab9c7;
    font-size: 28rpx;
}